@model TaskService.Models.TaskModel

<div class="TaskBox">
    <div>
	   Task Name:
	   @Html.ActionLink(@Model.Name, "TaskDetail", new { id = Model.TaskId })
    </div>
    <div>
	   Due Date:
	   @Model.DueDate
    </div>
    <div>
	   Estimated Duration:
	   @Model.EstimateDuration.ToString()
    </div>
    <div>
	   Tags:
        <ol>
            @foreach (string tag in Model.Tags)
		  {
                <li>@tag</li>
		  }
        </ol>
    </div>
    <hr />
</div>